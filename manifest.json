{
    "manifest_version": 2,
    "name": "OGNPploho",
    "version": "1.0",
    "description": "Can refresh the page and notify you when choices are available",
    "homepage_url": "https://github.com/WerDei/OGNPloho",
    "icons": {
        "48": "ISUBRUH_48.PNG"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.aviasales.ru/search/*"
            ],
            "js": [
                "refresher.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "audio/alert.mp3"
    ]
}
